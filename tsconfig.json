{
    "angularCompilerOptions": {
        "enableIvy": false
    },
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
